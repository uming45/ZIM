<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_height"
                android:paddingTop="@dimen/dimen_3"
                android:paddingBottom="@dimen/dimen_3">

    <ImageView
        android:id="@+id/tabbar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tabbar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabbar_icon"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/tabbar_textsize"
        android:textColor="@color/tabbar_text_color"/>
</RelativeLayout>